.row
  .small-12.columns
    %h1 Donations

.row
  .small-8.small-centered.columns
    -if @auth.present?
      =link_to("Donate", new_donation_path, :remote => true, :class => "button radius")
      #donation_form
    %table#donations_table
      %tr
        %th Donor
        %th Amount
        %th Date
      -@donations.each do |donation|
        %tr
          %td= donation.name
          %td= number_to_currency(donation.amount)
          %td= donation.date