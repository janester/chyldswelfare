.row
  .small-5.small-centered.columns
    =form_tag '/login' do
      %fieldset
        %legend 'Login to KickShip'
        =label_tag 'email'
        =text_field_tag 'email', nil, :autofocus => true, :placeholder => "janedoe", :id => "login_email"
        =label_tag 'password'
        =password_field_tag 'password', nil, :id => "login_password"
        =submit_tag 'Login to KickShips', :class => 'button radius', :id => "login_button"